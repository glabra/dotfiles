# if not interactive, return
case "$-" in
    *i*) ;; # pass
      *) return ;;
esac

# disable ^S
stty stop undef

# print smkx
printf -- '\033[?1h\033='

# warn if tmux session is running
which tmux &> /dev/null && \
    test -z "$TMUX" && \
    tmux list-sessions &> /dev/null && \
    printf -- '\033[1m!! tmux session is running !!\033[0m\n'

# envs
export PATH="${HOME}/.local/bin:${PATH}"

# alias
alias rm='rm -i'

# initialized
printf -- '%s\n' "$(LANG=C date)"
