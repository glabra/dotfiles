## foolproof
alias rm='rm -i'

## typosafe
alias ':q'='exit'
alias dc='cd'
alias c='cd'
alias d='cd'
alias sl='ls'
alias l='ls'
alias s='ls'

## safer su
alias su='su -'

## smoother cd dir
alias '..'='cd ../'
alias '....'='cd ../../'
alias '......'='cd ../../../'
alias '........'='cd ../../../../'
alias '..........'='cd ../../../../../'

