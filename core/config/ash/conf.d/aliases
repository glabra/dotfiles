## foolproof
alias rm='rm -i'

## typosafe
alias ':q'='exit'
alias sl='ls'
alias l='ls'
alias ll='ls -la'

## safer su
alias su='su -'

## smoother cd dir
alias '..'='cd ../'
alias '....'='cd ../../'
alias '......'='cd ../../../'
alias '........'='cd ../../../../'
alias '..........'='cd ../../../../../'

