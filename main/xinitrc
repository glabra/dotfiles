#!/bin/sh

if test -d /etc/X11/xinit/xinitrc.d
then
   for file in /etc/X11/xinit/xinitrc.d/*
   do
      test -x "${file}" && source "${file}"
   done
   unset file
fi

/usr/bin/amixer set Master off > /dev/null &
/usr/bin/amixer set Master 0 > /dev/null &
/usr/bin/xbacklight =5% > /dev/null &
export LANG='ja_JP.UTF-8'
export XMODIFIERS='@im=fcitx'
export GTK_IM_MODULE='fcitx'
export QT_IM_MODULE='fcitx'
(${HOME}/.local/bin/switch-wallpaper && /usr/bin/xcompmgr) > /dev/null &
(/usr/bin/fcitx && /usr/bin/xmodmap ${HOME}/.Xmodmap) > /dev/null &
exec ${HOME}/.local/bin/dwm
