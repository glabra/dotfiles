definekey top M-l exec /usr/bin/slock
definekey top XF86Tools exec ratpoison --command "echo `${HOME}/.local/bin/battery` `LANG=C date`"
definekey top S-XF86Tools exec ratpoison --command "echo `wpa_cli status`"
definekey top XF86Search exec ratpoison --command "echo `${HOME}/.local/bin/toggle-sleeping check`"
definekey top S-XF86Search exec ratpoison --command "echo `${HOME}/.local/bin/toggle-sleeping`"
definekey top XF86Explorer   echo w/Ctrl: reboot | w/Shift: poweroff
definekey top C-XF86Explorer exec systemctl reboot
definekey top S-XF86Explorer exec systemctl poweroff
definekey top XF86AudioMute          exec ratpoison --command "echo `amixer set Master toggle|tail -n 1|grep -oG '\[[onf]\+\]$'`"
definekey top M-XF86AudioMute        exec ratpoison --command "echo `amixer get Master|tail -n 1|grep -oG '\[[onf]\+\]$'`"
definekey top XF86AudioRaiseVolume   exec ratpoison --command "echo `amixer set Master 5%+|tail -n 1|grep -oG '[0-9]\+%'`"
definekey top XF86AudioLowerVolume   exec ratpoison --command "echo `amixer set Master 5%-|tail -n 1|grep -oG '[0-9]\+%'`"
definekey top C-XF86AudioRaiseVolume exec ratpoison --command "echo `amixer set Master 1%+|tail -n 1|grep -oG '[0-9]\+%'`"
definekey top C-XF86AudioLowerVolume exec ratpoison --command "echo `amixer set Master 1%-|tail -n 1|grep -oG '[0-9]\+%'`"
definekey top S-XF86AudioRaiseVolume exec ratpoison --command "echo `amixer set Master 10%+|tail -n 1|grep -oG '[0-9]\+%'`"
definekey top S-XF86AudioLowerVolume exec ratpoison --command "echo `amixer set Master 10%-|tail -n 1|grep -oG '[0-9]\+%'`"
definekey top M-XF86AudioRaiseVolume exec ratpoison --command "echo `amixer get Master|tail -n 1|grep -oG '[0-9]\+%'`"
definekey top M-XF86AudioLowerVolume exec ratpoison --command "echo `amixer get Master|tail -n 1|grep -oG '[0-9]\+%'`"
definekey top XF86MonBrightnessUp     exec xbacklight -time 0 -inc 5; ratpoison --command "echo `xbacklight -get|grep -oG '^[0-9]\+'`%"
definekey top XF86MonBrightnessDown   exec xbacklight -time 0 -dec 5; ratpoison --command "echo `xbacklight -get|grep -oG '^[0-9]\+'`%"
definekey top C-XF86MonBrightnessUp   exec xbacklight -time 0 -inc 1; ratpoison --command "echo `xbacklight -get|grep -oG '^[0-9]\+'`%"
definekey top C-XF86MonBrightnessDown exec xbacklight -time 0 -dec 1; ratpoison --command "echo `xbacklight -get|grep -oG '^[0-9]\+'`%"
definekey top S-XF86MonBrightnessUp   exec xbacklight -time 0 -inc 10; ratpoison --command "echo `xbacklight -get|grep -oG '^[0-9]\+'`%"
definekey top S-XF86MonBrightnessDown exec xbacklight -time 0 -dec 10; ratpoison --command "echo `xbacklight -get|grep -oG '^[0-9]\+'`%"
definekey top M-XF86MonBrightnessUp   exec ratpoison --command "echo `xbacklight -get|grep -oG '^[0-9]\+'`%"
definekey top M-XF86MonBrightnessDown exec ratpoison --command "echo `xbacklight -get|grep -oG '^[0-9]\+'`%"

