#!/bin/sh
set -u
set -e
umask 0750
export PATH="/bin:/usr/bin"
export LANG="C"
IFS="	 
"

audio_status=`amixer get Master | tail -n 1`
audio_level=`echo ${audio_status} | grep -oG '[0-9]\+%'`
if echo "${audio_status}" | grep -q '\[on\]$'
then
  mute_indicator='+'
else
  mute_indicator='-'
fi
str="v:${mute_indicator}${audio_level}"

light_level=`xbacklight -get | grep -oG '^[0-9]\+'`
str="${str} l:${light_level}%"

battery_status=`${HOME}/.local/bin/battery --with-notify`
str="${str} r:${battery_status}"

date=`date +%H:%M:%S`
str="${str} ${date}"

xsetroot -name "${str}"

