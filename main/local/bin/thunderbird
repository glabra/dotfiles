#!/bin/sh
set -ue
umask 0027
export PATH='/bin:/usr/bin'
IFS=' 	
'

. "$HOME/.local/bin/bwrap-functions.sh"

# sharing pid namespace is required to fcitx working
exec env -i bwrap \
	$(passenv DISPLAY) \
	$(passenv GTK_IM_MODULE) \
	$(passenv HOME) \
	$(passenv LANG) \
	$(passenv MOZ_PLUGIN_PATH) \
	$(passenv USER) \
	\
	$(ro_bind /usr/bin/thunderbird) \
	$(ro_bind /bin/sh) \
	$(ro_bind /usr/lib) \
	--symlink usr/lib /lib64 \
	$(ro_bind /etc/machine-id) \
	--proc /proc \
	\
	$(allow_ssl) \
	$(dev_bind null) \
	\
	$(ro_bind /usr/share/icons) \
	$(ro_bind /usr/share/mime) \
	$(ro_bind '/usr/share/glib-2.0') \
	$(ro_bind /usr/share/applications) \
	\
	$(allow_fonts) \
	$(allow_localtime) \
	\
	--tmpfs /tmp \
	$(ro_bind /tmp/.X11-unix/X0) \
	--tmpfs $HOME \
	$(ro_bind $HOME/.Xauthority) \
	$(ro_bind $HOME/.config/fcitx/dbus) \
	$(rw_bind "$HOME/Downloads") \
	\
	$(rw_bind "$HOME/.thunderbird") \
	\
	--unshare-user-try \
	--unshare-ipc \
	--unshare-uts \
	--unshare-cgroup-try \
	--share-net \
	--new-session \
	--die-with-parent \
	/usr/bin/thunderbird "$@"

