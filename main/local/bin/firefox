#!/bin/sh
set -ue
umask 0027
export PATH='/bin:/usr/bin'
IFS=' 	
'

. "$HOME/.local/bin/bwrap-functions.sh"

# sharing pid namespace is required to fcitx working
exec env -i bwrap \
	$(passenv_if_exists DRI_PRIME) \
	$(passenv DISPLAY) \
	$(passenv GTK_IM_MODULE) \
	$(passenv HOME) \
	$(passenv LANG) \
	$(passenv MOZ_PLUGIN_PATH) \
	$(passenv USER) \
	$(passenv XDG_RUNTIME_DIR) \
	\
	$(ro_bind /usr/lib) \
	--symlink usr/lib /lib64 \
	$(ro_bind /etc/machine-id) \
	\
	$(dev_bind shm) \
	$(allow_gpu) \
	$(rw_bind /run/user/${UID}) \
	--proc /proc \
	\
	$(allow_ssl) \
	$(allow_fonts) \
	$(allow_localtime) \
	\
	$(ro_bind /usr/share/X11/xkb) \
	$(ro_bind /usr/share/icons) \
	$(ro_bind /usr/share/mime) \
	$(ro_bind /usr/share/glib-2.0) \
	\
	--tmpfs /tmp \
	$(ro_bind /tmp/.X11-unix/X0) \
	--tmpfs $HOME \
	$(ro_bind $HOME/.Xauthority) \
	$(rw_bind $HOME/.config/pulse) \
	$(ro_bind $HOME/.config/fcitx/dbus) \
	\
	$(ro_bind $HOME/.pki) \
	$(rw_bind "$HOME/.mozilla") \
	\
	$(ro_bind "$HOME/Documents") \
	$(rw_bind "$HOME/Downloads") \
	--bind "$HOME/Downloads" "$HOME/ダウンロード" \
	\
	--unshare-user-try \
	--unshare-ipc \
	--unshare-uts \
	--unshare-cgroup-try \
	--share-net \
	--new-session \
	--die-with-parent \
	/usr/lib/firefox/firefox "$@"

