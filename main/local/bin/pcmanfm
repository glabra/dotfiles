#!/bin/sh
set -ue
umask 0027
export PATH='/bin:/usr/bin'
IFS=' 	
'

passenv () {
	printf -- '--setenv %s %s' "$1" $(eval "printf -- '%s' \$$1")
}

ro_bind () {
	printf -- '--ro-bind %s %s' "$1" "$1"
}

rw_bind () {
	printf -- '--bind %s %s' "$1" "$1"
}

dev_bind () {
	printf -- '--dev-bind /dev/%s /dev/%s' "$1" "$1"
}

exec env -i bwrap \
	--setenv VDPAU_DRIVER 'va_gl' \
	$(passenv DISPLAY) \
	$(passenv GTK_IM_MODULE) \
	$(passenv HOME) \
	$(passenv LANG) \
	$(passenv USER) \
	$(passenv XDG_RUNTIME_DIR) \
	\
	$(ro_bind /usr/bin) \
	$(ro_bind /usr/lib) \
	--symlink usr/lib /lib64 \
	$(ro_bind /etc/machine-id) \
	$(rw_bind /run/user/${UID}) \
	\
	$(dev_bind dri) \
	$(dev_bind null) \
	$(ro_bind /sys/dev/char) \
	$(ro_bind /sys/devices/pci0000:00) \
	\
	$(ro_bind /usr/share) \
	$(ro_bind /etc/fonts) \
	\
	$(ro_bind /usr/share/locale/ja/LC_MESSAGES/pcmanfm.mo) \
	\
	--tmpfs /tmp \
	$(ro_bind /tmp/.X11-unix/X0) \
	$(rw_bind $HOME) \
	$(ro_bind $HOME/.Xauthority) \
	$(ro_bind $HOME/.config/fcitx/dbus) \
	$(rw_bind /media) \
	\
	--unshare-user-try \
	--unshare-ipc \
	--unshare-uts \
	--unshare-cgroup-try \
	--unshare-net \
	--new-session \
	--die-with-parent \
	/usr/bin/pcmanfm "$@"

