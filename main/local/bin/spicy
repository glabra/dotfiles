#!/bin/sh
set -ue
umask 0027
export PATH='/bin:/usr/bin'
IFS=' 	
'

. "$HOME/.local/bin/bwrap-functions.sh"

exec env -i bwrap \
	$(passenv DISPLAY) \
	$(passenv HOME) \
	$(passenv LANG) \
	$(passenv XDG_RUNTIME_DIR) \
	\
	$(ro_bind /usr/bin/spicy) \
	$(ro_bind /usr/lib) \
	--symlink usr/lib /lib64 \
	$(rw_bind /run/user/${UID}) \
	$(ro_bind /etc/machine-id) \
	\
	$(allow_fonts) \
	$(allow_ssl) \
	\
	--tmpfs /tmp \
	$(ro_bind /tmp/.X11-unix/X0) \
	--tmpfs $HOME \
	$(ro_bind $HOME/.Xauthority) \
	\
	--unshare-all \
	--share-net \
	--new-session \
	--die-with-parent \
	/usr/bin/spicy "$@"

