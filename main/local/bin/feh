#!/bin/sh
set -ue
umask 0027
export PATH='/bin:/usr/bin'
IFS=' 	
'

[ "$#" -eq 0 ] && exit 1

. "$HOME/.local/bin/bwrap-functions.sh"

parse_opts "$@"

exec env -i bwrap \
	$(passenv DISPLAY) \
	$(passenv HOME) \
	\
	$(ro_bind /usr/bin/feh) \
	$(ro_bind /usr/lib) \
	--symlink usr/lib /lib64 \
	\
	--tmpfs /tmp \
	$(ro_bind /tmp/.X11-unix/X0) \
	--tmpfs $HOME \
	$(ro_bind $HOME/.Xauthority) \
	--ro-bind "$filepath" "/media.$fileext" \
	\
	--unshare-all \
	--new-session \
	/usr/bin/feh ${opts:--.} "/media.$fileext"

