#!/bin/sh
set -ue
umask 0027
export PATH='/bin:/usr/bin'
IFS=' 	
'

. "$HOME/.local/bin/bwrap-functions.sh"

bind_lcmessage () {
	allow_locale ja $1
}

# sharing pid namespace is required to fcitx working
exec env -i bwrap \
	$(passenv DISPLAY) \
	$(passenv GTK_IM_MODULE) \
	$(passenv HOME) \
	$(passenv LANG) \
	$(passenv USER) \
	$(passenv XDG_RUNTIME_DIR) \
	\
	$(ro_bind /usr/bin/gimp) \
	$(ro_bind /usr/lib) \
	--symlink usr/lib /lib64 \
	$(ro_bind /etc/machine-id) \
	$(rw_bind /run/user/${UID}) \
	$(dev_bind null) \
	\
	$(allow_fonts) \
	\
	$(ro_bind /usr/share/gtk-2.0) \
	$(ro_bind /usr/share/gimp) \
	$(ro_bind /etc/gimp) \
	\
	$(bind_lcmessage gimp20-libgimp) \
	$(bind_lcmessage gimp20) \
	$(bind_lcmessage gimp20-python) \
	$(bind_lcmessage gimp20-script-fu) \
	$(bind_lcmessage gimp20-std-plug-ins) \
	$(bind_lcmessage gimp20-tips) \
	\
	--tmpfs /tmp \
	$(ro_bind /tmp/.X11-unix/X0) \
	$(rw_bind $HOME) \
	$(ro_bind $HOME/.Xauthority) \
	$(ro_bind $HOME/.config/fcitx/dbus) \
	$(rw_bind /media) \
	\
	--unshare-user-try \
	--unshare-ipc \
	--unshare-uts \
	--unshare-cgroup-try \
	--unshare-net \
	--new-session \
	/usr/bin/gimp "$@"

