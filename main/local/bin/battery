#!/bin/sh
BAT_TRESHOLD=5

cd /sys/class/power_supply/

if test `cat AC/online` -eq 1
then
	echo -n "o"
else
	echo -n "x"
fi

bat_full=$(( `cat BAT0/energy_full` + `cat BAT1/energy_full` ))
bat_now=$(( `cat BAT0/energy_now` + `cat BAT1/energy_now` ))
bat_percent=$(( bat_now * 100 / bat_full ))

echo -n "${bat_percent}%"

#if ${bat_percent} -lt ${BAT_TRESHOLD}
#then
#    notify-send -u critical "Critical low-battery" "Battery remains less than 5 percents."
#fi
