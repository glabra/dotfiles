# no persistence history
unset HISTFILE
unset HISTSIZE

# disable ^S
stty stop undef

# for delete key in st
tput smkx

# set PS1
ps1_after_path () {
    register_callback ps1_after_path ${1}
}

PS1='$(tput bold)$(basename "${PWD}")$(tput sgr0)$(execute_callback ps1_after_path)$(tput bold)\$$(tput sgr0) '

# alias
## foolproof
alias rm='rm -i'

## typosafe
alias q='exit'
alias x='exit'
alias lx='exit'
alias ':q'='exit'
alias c='cd'
alias d='cd'
alias vf='cd'
alias scd='cd'
alias cd..='cd ..'
alias sl='ls'
alias ks='ls'
alias l='ls'
alias s='ls'
alias als='ls'
alias dls='ls'
alias rf='rm'
alias vp='cp'
alias mc='mv'

## obenri on linux
alias ls='ls --color=auto'
alias less='less -R'
alias bmount='udisksctl mount -b'
alias bumount='udisksctl unmount -b'
alias fuserumount='fusermount -u'
alias alsa-reload='alsactl nrestore'
alias keychange='setxkbmap \
  -option ctrl:nocaps \
  -option compose:prsc \
  -option shift:both_capslock \
  -option terminate:ctrl_alt_bksp'

