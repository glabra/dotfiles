# no persistence history
unset HISTFILE

# disable ^S
stty stop undef

# for delete key in st
tput smkx

# set PS1
# callbacks: do not print escape sequence
#   ps1_after_path
#   ps1_after_prompt
export PS1='\w$(execute_callback ps1_after_path)\$ $(execute_callback ps1_after_prompt)'

__after_prompt_showdate () {
    printf '(%s)' "$(date +%H:%M)"
}
register_callback ps1_after_prompt __after_prompt_showdate
