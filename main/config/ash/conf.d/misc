# completion
if [ -n "${BASH_VERSION:-}" ]; then
	source_if_exists "/etc/bash-completion/bash_completion"
	source_if_exists "/usr/share/bash-completion/bash_completion"
fi

# fast-sync
if [ -x "${HOME}/.dotfiles/bootstrap.sh" ]; then
	dotfiles_bootstrap () {
		(cd ${HOME}/.dotfiles
		./bootstrap.sh "$@"
		)
	}

	dotfiles_cd () {
		cd ${HOME}/.dotfiles
	}
fi

