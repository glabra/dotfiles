disright () {
    (out=$(printf "${1}" | tr '[a-z]' '[A-Z]')
    xrandr --output ${out:-HDMI2} --auto --right-of eDP1
    )
}

dismirror () {
    (out=$(printf "${1}" | tr '[a-z]' '[A-Z]')
    xrandr --output ${out:-HDMI2} --auto --same-as eDP1
    )
}

disoff () {
    (out=$(printf "${1}" | tr '[a-z]' '[A-Z]')
    xrandr --output ${out:-HDMI2} --off
    )
}
