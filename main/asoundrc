pcm.dmixer {
  type dmix
    ipc_key 1024
    ipc_key_add_uid 0
    ipc_perm 0660
    slave {
      pcm "hw:1,0"
      period_size 1024
      period_time 0
      rate 48000
    }
}

ctl.dmixer {
  type hw
    card 1
}

pcm.!default {
  type plug
    slave.pcm "dmixer"
}

ctl.!default {
  type hw
    card 1
}
