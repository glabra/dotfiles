pcm.amix {
  type dmix
  ipc_key 1024
  slave {
    pcm "hw:Loopback,0,0"
    format S32_LE
  }
}

pcm.to_jack {
  type plug
  slave {
    pcm "hw:Loopback,1,0"
    format S32_LE
  }
}

pcm.!default {
  type plug
  slave {
    pcm "amix"
    format S32_LE
  }
}

ctl.!default {
  type hw
  card 1
}

