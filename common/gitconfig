[core]
	excludesfile = ~/.config/git/gitignore
[push]
	default = nothing
[color]
	ui = true
[alias]
	b = branch
	d = diff
	l = log --graph --date=iso --stat
	s = status --branch --short
	lo = log --graph --date=iso --pretty=format:'%C(auto)%h: by %aN%n%s%n'
	si = submodule update --init
	smup = submodule foreach git pull origin master
[user]
	email = inoue@kamikakushi.net
	name = INOUE Yosuke
